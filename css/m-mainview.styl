@import "help"

$headerHeight = 55px
$footerHeight = 85px
$mainMargins = 10px

$photoTitleHeight = 70px


.m-mainview
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    verticalGradient #ffffff, #f6f7fb

    &__header
        position absolute
        left 0
        top 0
        width 100%
        height $headerHeight
        background-image url('../img/logo.png')
        background-repeat no-repeat
        background-position center center
        background-size 90px

    &__card
        position absolute
        left $mainMargins
        top $headerHeight
        right $mainMargins
        bottom $footerHeight

    &__footer
        position absolute
        left 0
        bottom 0
        width 100%
        height $footerHeight
        text-align center

        &__inner
            position absolute
            margin 0 auto
            top 50%
            left 50%
            transform translateX(-50%)
            width 205px

            > *
                display inline-block
                float left
                transform translateY(-50%)

            .m-button + .m-button
                margin-left 25px


.m-card
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    border 1px solid #e5e5e5
    border-radius 7px
    overflow hidden

    &.released
        transition left .1s

    &.liked
        &:after
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background red
            opacity .5

    &.disliked
        &:after
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background red
            opacity .5

    &__photo
        position absolute
        left 0
        top 0
        width 100%
        bottom $photoTitleHeight
        background-position center center
        background-size cover

    &__title
        position absolute
        left 0
        width 100%
        bottom 0
        height $photoTitleHeight
        background #fff

        &__inner
            position absolute
            left 0
            top 50%
            width 100%
            transform translateY(-50%)
            padding 0 2 * $mainMargins
            font-size 22px

            &__name
                font-weight bold

            &__desc
                margin-top 2px
                font-size 14px
                color $greyColor

            &__interests
                position absolute
                right 1.5 * $mainMargins
                top 50%
                transform translateY(-50%)
                font-size 22px
                color $lightGreyColor
                padding-left 30px
                background-image url('../img/icon_interests.jpg')
                background-size 26px
                background-position left center
                background-repeat no-repeat

            &__friends
                position absolute
                right 85px
                top 50%
                transform translateY(-50%)
                font-size 22px
                color $pinkColor
                padding-left 30px
                background-image url('../img/icon_friends.jpg')
                background-size 26px
                background-position left center
                background-repeat no-repeat

