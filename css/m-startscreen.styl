@import "help"

.m-startscreen
    position fixed
    left 0
    top 0
    width 100%
    height 100%

    background-image url('/s/logo.png')
    background-repeat no-repeat
    background-position center 20px
    background-size 90px

    padding 70px 20px 20px

    button
        width 100%
        color #fff
        background $pinkColor
        font-size 20px
        border none
        padding 15px

        + button
            margin-top 15px

        &.m-startscreen__fb
            background #3b5998

        &[disabled=disabled]
            opacity .3

    p
        margin 5px 0
        font-size 20px
        text-align center

    input
        background #f6f6f6
        font-size 20px
        border none
        padding 10px
        width 100%

    hr
        margin 20px 0
        opacity .5
