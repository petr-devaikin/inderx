.m-contact
    position relative
    width 100%
    height 65px
    line-height 65px
    background #fff
    padding 5px
    border-top 1px solid #eee

    &__photo
        position absolute
        left 10px
        top 13px
        width 40px
        height 40px
        border-radius 50%
        background-color #eee
        background-size cover

    &__name
        position absolute
        left 60px
        top 2px
        font-size 22px

    &__emoji
        position absolute
        right 5px
        top 5px
        font-size 24px
        text-align right
        width 50%
        letter-spacing 5px
