@font-face
    font-family 'NTR'
    font-style normal
    src url('http://fonts.googleapis.com/css?family=NTR')


$screenWidth = 375px
$screenHeight = 667px

body
    margin 0
    padding 0
    background #000
    color #404040

    font-family 'NTR', sans-serif

    *
        box-sizing border-box


.m-fullscreen
    position relative
    height 100px
    width 100px
    background white
    margin-top 2000px


.l-screen
    position fixed
    left 0
    top 0
    width 100%
    max-width $screenWidth
    height 100%
    max-height $screenHeight
    background #fff

    &:after
        display none
        content ''
        position absolute
        z-index 1000
        left 0
        top 0
        width 100%
        height 100%
        opacity 0.5
        background-image url('../img/s_main.jpg')
        background-size contain
        background-position bottom center
        background-repeat no-repeat


